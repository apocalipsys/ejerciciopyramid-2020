{% extends 'home.jinja2' %}

{% block title %} {{name}} {% endblock title %}

{% block content %}


<h1>{{greeting}}</h1>
<h2>{{request.user.name}}</h2>
<span><strong>User Posts:</strong></span>
{% for post in posts %}
<dl>
    <dt>Title: {{post.title}} | Date: {{post.date}}</dt>
        <dd>{{post.text}}</dd>
</dl>
<a class="btn btn-outline-dark" href="{{request.route_url('delete_post', post_id=post.id)}}" role="button">Delete</a>
<a class="btn btn-outline-dark" href="{{request.route_url('edit_post', user=request.user.name, post_id=post.id)}}" role="button">Edit</a>
<hr>
{% endfor %}

{% endblock content %}

