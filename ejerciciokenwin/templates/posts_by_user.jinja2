{% extends 'home.jinja2' %}

{% block title %} {{name}} {% endblock title %}
{% block content %}

<h1>Posted by:</h1>
<h2>{{user.name}}</h2>

<dl>
    <dt>User name: {{user.name}}</dt>
</dl>
<div>
    <span class="d-block p-2 bg-dark text-white"><strong>Profile Image</strong>
        <img src="data:;base64,{{ img }}" class="img-fluid" alt="Responsive image"/>
    </span>
</div>
{% for post in posts %}
<dl>
    <dt>Title: {{post.title}} | Date: {{post.date}}</dt>
        <dd>{{post.text}}</dd>
</dl>
<hr>
{% endfor %}

{% endblock content %}
