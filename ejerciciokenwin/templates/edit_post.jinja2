{% extends 'home.jinja2' %}

{% block title %} {{name}} {% endblock title %}
{% block content %}
<div class="jumbotron jumbotron-fluid" id="edit-post">
  <div class="container">


    <h1 class="display-4">Edit post</h1>
    <p class="lead">{{request.user.name}}</p>
  </div>
</div>


<!--
<div>
    <span> Profile Image</span>

    <img src="data:;base64,{{ img }}"/>
</div>
-->


<form action="{{ url }}" method="post" accept-charset="utf-8" enctype="multipart/form-data">
<input type="hidden" name="next" value="{{ next_url }}">
<div class="form-group">
    <label for="title">Title</label>
    <input type="text" value="{{ post.title }}" class="form-control" id="title" name="post_title" placeholder="Put the title here">
</div>
<div class="input-group">
  <div class="input-group-prepend">
    <span class="input-group-text">Comment</span>
  </div>
  <textarea class="form-control" aria-label="With textarea" name="post_text">{{ post.text }}</textarea>
<button type="submit" name="form.submitted" value="Change image" class="btn btn-outline-dark">Post!</button>
</div>
</form>
{% endblock content %}
