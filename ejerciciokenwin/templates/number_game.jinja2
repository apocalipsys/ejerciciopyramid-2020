{% extends 'home.jinja2' %}

{% block title %} {{name}} {% endblock title %}
{% block content %}
<div class="jumbotron jumbotron-fluid" id="number-game">
  <div class="container">


    <h1 class="display-4">Number Game</h1>
    <p class="lead">{{request.user.name}}</p>
  </div>
</div>

<!--
<div>
    <span> Profile Image</span>

    <img src="data:;base64,{{ img }}"/>
</div>
-->


<form action="{{ url }}" method="post" accept-charset="utf-8" enctype="multipart/form-data">
    <div class="form-group">

<input type="hidden" name="next" value="{{ next_url }}">
    <label for="customRange3">Select a number</label>
    <input type="range" class="custom-range" min="0" max="10" step="1" id="customRange3" name="selected_number" oninput="output_value.value = customRange3.value">
    <button type="submit" name="form.submitted" value="Number selection" class="btn btn-outline-dark">Join</button>
            <output id="output_value">SLIDE FOR SELECT</output>

    </div>
</form>
{% endblock content %}
