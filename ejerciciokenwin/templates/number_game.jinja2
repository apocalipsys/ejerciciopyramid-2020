<form action="{{ url }}" method="post" accept-charset="utf-8" enctype="multipart/form-data">
    <div class="form-group">

<input type="hidden" name="next" value="{{ next_url }}">
    <label for="customRange3">Select a number</label>
    <input type="range" class="custom-range" min="0" max="10" step="1" id="customRange3" name="selected_number" oninput="output_value.value = customRange3.value">
    <button type="submit" name="form.submitted" value="Number selection" class="btn btn-info">Join</button>
            <output id="output_value">SLIDE FOR SELECT</output>

    </div>
</form>
{% endblock content %}
